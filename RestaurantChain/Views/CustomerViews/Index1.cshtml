@model IEnumerable<RestaurantChain.Models.Cart>

<style>

    a {
        color: white;
        text-decoration: none;
    }

        a:hover {
            text-decoration: none;
            color: white;
        }
</style>
<div class="col-lg-2">
    
    <button class="btn btn-danger">@Html.ActionLink("Payment", "Payment")</button>
    <button class="btn btn-danger">@Html.ActionLink("Back To Menus", "Index", new { id = 0 })</button>
</div>
<div class="col-lg-7">

    <table class="table table-hover bg-danger  table-striped">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemId)
                </td>
                <td>
                    <button class="btn btn-danger">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>
                    <button class="btn btn-danger">@Html.ActionLink("Details", "Details", new { id = item.Id })</button>
                    <button class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
                </td>
            </tr>
        }
    </table>

</div>


